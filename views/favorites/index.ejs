<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (!items || items.length === 0) { %>
  <p>You havenâ€™t saved any favorites yet.</p>
<% } else { %>
  <ul class="favorites-grid">
    <% items.forEach(item => { %>
      <li class="favorite-card">
        <a href="/inv/detail/<%= item.inv_id %>">
          <img src="<%= item.inv_thumbnail %>" 
               alt="<%= item.inv_year %> <%= item.inv_make %> <%= item.inv_model %>">
          <h3><%= item.inv_year %> <%= item.inv_make %> <%= item.inv_model %></h3>
          <p>Price: $<%= item.inv_price %></p>
          <p>Miles: <%= item.inv_miles %></p>
          <p>Color: <%= item.inv_color %></p>
          <p>Type: <%= item.classification_name %></p>
        </a>

        <!-- Remove button -->
        <form action="/favorites/remove/<%= item.inv_id %>" method="post">
          <button type="submit" class="btn btn-danger">Remove</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
