<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="form-container">
  <form action="/inv/delete" method="post" class="auth-form" id="updateForm">
    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required 
           value="<%= locals.inv_make %>" readonly/>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required 
    value="<%= locals.inv_model %>" readonly/>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" required value="<%= locals.inv_year %>" readonly/>    
    
    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" step="0.01" min="1" required value="<%= locals.inv_price %>" readonly/>   

    <button type="submit">Delete Vehicle</button>
    <p>Confirm Deletion - The delete is permanent.</p>
    
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>  
</section>


