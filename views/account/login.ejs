    <!-- Login Form -->
 <section class="login-container">
    <form action="/account/login" method="post" class="login-form">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <p class="password-rules">
        <i>Password must be at least 12 characters and contain at least 1 uppercase letter, 1 number, and 1 special character.</i>
        </p>

        <button type="submit">Login</button>
    </form>

  <p class="signup-redirect">
    No account? <a href="/account/register">Sign-up</a>
  </p>
</section>